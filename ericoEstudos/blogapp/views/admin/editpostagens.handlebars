

{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="POST">
            <h4>Editar Postagem:</h4>
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo" >Titulo: </label>
            <input type="text" name="titulo" id="" class="form-control" value="{{postagem.titulo}}">
            <label for="slug">slug: </label>
            <input type="text" name="slug" class="form-control" id="" value="{{postagem.slug}}">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" id="" value="{{postagem.descricao}}">
            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class='form-control'>{{postagem.conteudo}}</textarea>
            <label for="categoria: "></label>
            <select name="categoria" id="" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria cadastrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Editar postagem</button>
        </form>
    </div>
</div>