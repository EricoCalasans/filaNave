

{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <h4>Nova Postagem:</h4>
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" id="" class="form-control">
            <label for="slug">slug: </label>
            <input type="text" name="slug" class="form-control" id="">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" id="">
            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class='form-control'></textarea>
            <label for="categoria: "></label>
            <select name="categoria" id="" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria cadastrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Criar postagem</button>
        </form>
    </div>
</div>